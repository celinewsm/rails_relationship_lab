<h1>Recipes#show</h1>
<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @recipe.name %>
</p>
<p>
  <strong>Cuisine:</strong>
  <%= @recipe.cuisine.name %>
</p>

<p>
  <strong>Instructions:</strong>
  <%= @recipe.instructions %>
</p>
<p>
  <strong>Servings:</strong>
  <%= @recipe.servings %>
</p>
<p>
  <strong><%= pluralize(@recipe.ingredients.count, "ingredient") %></strong>
  <ul>
    <% @recipe.ingredients.each do |ingredient| %>
      <li><%= link_to "#{ingredient.name}", ingredient %></li>
    <% end %>
  </ul>
</p>
<p>
  <strong><%= pluralize(@recipe.courses.count, "course") %></strong>
  <ul>
    <% @recipe.courses.each do |course| %>
      <li><%= link_to "#{course.name} course", course %></li>
    <% end %>
  </ul>
</p>

